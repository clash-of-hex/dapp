{
  "name": "hex-battle",
  "version": "2.0.0",
  "description": "A GameFi dApp that allows players to compete with capture the most cells on a hex battlefield",
  "license": "MIT",
  "keywords": [
    "everscale",
    "dapp"
  ],
  "main": "src/App.ts",
  "scripts": {
    "start": "vite --mode localhost",
    "preview": "vite preview --mode localhost",
    "build": "vite build --mode production",
    "build-wasm": "cp node_modules/nekoton-wasm/nekoton_wasm_bg.wasm dist && cp ../../public/*.wasm dist/",
    "postinstall": "run-p build-asset",
    "build-asset": "pwa-asset-generator ../asset/logo.svg public --favicon --type png --padding 0 --background transparent --opaque false --log false",
    "lint-type": "vue-tsc --noEmit",
    "lint": "eslint .",
    "lint-fix": "eslint . --fix",
    "fix": "run-p lint-fix"
  },
  "prettier": {},
  "eslintConfig": {
    "root": true,
    "extends": [
      "plugin:vue/vue3-essential",
      "eslint:recommended",
      "@vue/eslint-config-typescript",
      "@vue/eslint-config-prettier",
      "plugin:tailwindcss/recommended"
    ],
    "parserOptions": {
      "ecmaVersion": "latest"
    },
    "plugins": [
      "@typescript-eslint",
      "@typescript-eslint",
      "tailwindcss"
    ],
    "rules": {
      "@typescript-eslint/rule-name": "error",
      "tailwindcss/no-custom-classname": "off"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "type-enum": [
        2,
        "always",
        [
          "init",
          "build",
          "ci",
          "chore",
          "docs",
          "feat",
          "fix",
          "perf",
          "refactor",
          "revert",
          "style",
          "test"
        ]
      ]
    }
  },
  "postcss": {
    "plugins": {
      "tailwindcss": {},
      "autoprefixer": {}
    }
  },
  "dependencies": {
    "@eversdk/appkit": "^0.3.2",
    "@eversdk/core": "^1.38.0",
    "@eversdk/lib-web": "^1.38.0",
    "@headlessui/vue": "^1.7.4",
    "@heroicons/vue": "^2.0.13",
    "@vueuse/core": "^9.4.0",
    "app-v5": "file:../app-v5",
    "daisyui": "^2.38.1",
    "everscale-inpage-provider": "^0.3.43",
    "everscale-standalone-client": "^2.1.1",
    "honeycomb-grid": "4.0.1",
    "nprogress": "^0.2.0",
    "pinia": "^2.0.23",
    "sass": "^1.56.0",
    "vue": "^3.2.41",
    "vue-router": "^4.1.6"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.2.0",
    "@commitlint/config-conventional": "^17.2.0",
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/forms": "^0.5.3",
    "@tailwindcss/line-clamp": "^0.4.2",
    "@tailwindcss/typography": "^0.5.7",
    "@types/node": "^18.11.9",
    "@types/nprogress": "^0.2.0",
    "@typescript-eslint/eslint-plugin": "^5.42.0",
    "@vitejs/plugin-vue": "^3.2.0",
    "@vue/eslint-config-prettier": "^7.0.0",
    "@vue/eslint-config-typescript": "^11.0.2",
    "autoprefixer": "^10.4.13",
    "commitizen": "^4.2.5",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "^8.26.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "latest",
    "eslint-plugin-tailwindcss": "^3.6.2",
    "eslint-plugin-vue": "latest",
    "everdev": "^1.4.0",
    "lint-staged": "^13.0.3",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.18",
    "prettier": "^2.7.1",
    "pwa-asset-generator": "^6.2.0",
    "tailwindcss": "^3.2.2",
    "typescript": "^4.8.4",
    "unplugin-auto-import": "^0.11.4",
    "unplugin-vue-components": "^0.22.9",
    "vite": "^3.2.3",
    "vite-plugin-static-copy": "^0.12.0",
    "vue-tsc": "^1.0.9"
  }
}
