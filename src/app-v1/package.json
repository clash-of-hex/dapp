{
  "name": "hex-battle-game",
  "version": "1.0.0",
  "source": "src/index.html",
  "assetsPath": "asset",
  "scripts": {
    "start": "parcel",
    "postinstall": "run-p build-*",
    "cp-wasm": "mkdir -p dist && cp node_modules/@eversdk/lib-web/eversdk.wasm dist",
    "build-asset": "pwa-asset-generator ../asset/logo.svg public --favicon --type png --padding 0 --background transparent --opaque false --log false",
    "build": "npm run cp-wasm && parcel build"
  },
  "author": "hex-battle-game",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/hex-battle-game/dapp/issues"
  },
  "dependencies": {
    "@eversdk/appkit": "^0.3.3",
    "@eversdk/core": "^1.38.1",
    "@eversdk/lib-node": "^1.38.1",
    "@eversdk/lib-web": "^1.38.1",
    "everscale-inpage-provider": "^0.3.43",
    "everscale-standalone-client": "^2.1.3",
    "honeycomb-grid": "^4.0.1"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "parcel": "^2.8.0",
    "parcel-plugin-asset-copier": "^1.1.1",
    "pwa-asset-generator": "^6.2.0"
  }
}
